<Window x:Class="MilestoneProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MilestoneProject"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:" Margin="0,0,0,10" />
            <TextBox x:Name="usernameTextBox" Width="200" Margin="0,0,0,20"/>

            <TextBlock Text="Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="passwordBox" Width="200" Margin="0,0,0,20"/>

            <Button x:Name="loginButton" Content="Login" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
